{
    "name": "web-cell-home",
    "version": "1.0.0-beta",
    "description": "Official site of WebCell",
    "keywords": [
        "WebCell",
        "homepage",
        "official",
        "website"
    ],
    "author": "shiy2008@gmail.com",
    "license": "AGPL-3.0",
    "private": true,
    "homepage": "https://web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/EasyWebApp.github.io.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/EasyWebApp.github.io/issues"
    },
    "dependencies": {
        "boot-cell": "^0.18.1",
        "classnames": "^2.2.6",
        "github-web-widget": "^3.0.0-beta.2",
        "highlight.js": "^9.17.1",
        "koajax": "^0.5.2",
        "marked": "^0.8.0",
        "web-cell": "^2.0.0-rc.12"
    },
    "devDependencies": {
        "@babel/core": "^7.7.7",
        "@types/classnames": "^2.2.9",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1",
        "typescript": "^3.7.4",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    },
    "lint-staged": {
        "*.{html,md,css,json,yml,js,ts,tsx}": [
            "prettier --write",
            "git add"
        ]
    },
    "scripts": {
        "start": "rm -rf dist/  &&  parcel source/index.html",
        "test": "lint-staged",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "pack-dist": "parcel build source/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
