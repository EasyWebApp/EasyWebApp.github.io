    },
    "dependencies": {
        "boot-cell": "^2.0.0-beta.2",
        "cell-router": "^3.0.0-rc.5",
        "classnames": "^2.5.1",
        "dom-renderer": "^2.0.6",
        "github-web-widget": "^4.0.0-rc.1",
        "koajax": "^0.9.6",
