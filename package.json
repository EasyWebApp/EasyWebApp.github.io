    "dependencies": {
        "boot-cell": "^2.0.0-beta.20",
        "cell-router": "^3.0.0-rc.5",
        "classnames": "^2.5.1",
        "dom-renderer": "^2.1.7",
        "github-web-widget": "^4.0.0-rc.2",
        "koajax": "^1.1.2",
        "marked": "^12.0.2",
