{
    "name": "web-cell-home",
    "version": "1.0.0-beta",
    "description": "Official site of WebCell",
    "keywords": [
        "WebCell",
        "homepage",
        "official",
        "website"
    ],
    "author": "shiy2008@gmail.com",
    "license": "AGPL-3.0",
    "private": true,
    "homepage": "https://web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/EasyWebApp.github.io.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/EasyWebApp.github.io/issues"
    },
    "dependencies": {
        "boot-cell": "^1.0.1",
        "bootstrap-icons": "^1.0.0-alpha5",
        "cell-router": "^2.0.0-rc.8",
        "classnames": "^2.2.6",
        "github-web-widget": "^3.0.0-beta.5",
        "koajax": "^0.6.2",
        "marked": "^1.1.1",
        "mobx": "^5.15.6",
        "mobx-web-cell": "^0.3.1",
        "prismjs": "^1.21.0",
        "web-cell": "^2.2.0",
        "web-utility": "^1.8.0"
    },
    "devDependencies": {
        "@babel/core": "^7.11.4",
        "@types/classnames": "^2.2.10",
        "autoprefixer": "^9.8.6",
        "husky": "^4.2.5",
        "less": "^3.12.2",
        "lint-staged": "^10.2.13",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.1.1",
        "typescript": "^4.0.2",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true
    },
    "lint-staged": {
        "*.{html,md,less,json,yml,js,ts,tsx}": [
            "prettier --write"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "workbox generateSW  &&  parcel source/index.html --open",
        "pack-dist": "parcel build source/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
